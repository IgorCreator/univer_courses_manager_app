<div class="row center sign-up-form">
  <div class="col s3 m3">
  </div>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
      </div>
      <% if current_user == @student %>
        <div class="card-action">
          <%= link_to 'Edit profile <i class="material-icons right">create</i>'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col s3 m3">
  </div>
</div>

<div class="card-action">
  <h5>Current enrollments</h5>
  <% if @student.courses.empty? %>
    <p>None</p>
  <% else %>
    <div class="row">
      <% @student.courses.each do |course| %>
        <%= render partial: 'courses/course', locals: { course: course } %>
      <% end %>
  <% end %>
  </div>
</div>



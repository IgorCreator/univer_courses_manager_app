<% if @student.errors.any? %>
  <div class="container">
    <div class="row sign-up-form">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten-2">
        <span class="white-text">
          <strong><%= pluralize(@student.errors.count, "error") %></strong>
          prohibited your profile from being created
          <ul>
            <% @student.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </span>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">

        <h3 class="header">Sign Up</h3>

        <div class="row">
          <%= form_for(@student, html: { class: "col s12" }) do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                <%= f.label :name %>
              </div>
              <div class="input-field col s6">
                <%= f.text_field :email, placeholder: "Enter your email" %>
                <%= f.label :email %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= button_to '', { remote: true, class: "waves-effect waves-light btn-large" } do %>
                  Sign up <i class="material-icons right">send</i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


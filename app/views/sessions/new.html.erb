<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">

        <h3 class="header">
          Log in
        </h3>

        <div class="row">
          <%= form_for(:sessions, html: { class: "col s12" }) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, placeholder: "Enter your email", autofocus: true  %>
                <%= f.label :email, class: 'active' %>
              </div>
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: "Enter your password", autofocus: true  %>
                <%= f.label :password, class: 'active' %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.button 'Log in <i class="material-icons right">send</i>'.html_safe, class: "waves-effect waves-light btn-large" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

